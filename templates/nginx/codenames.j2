server {
        server_name codenames-pictures.{{ server_name }} codenames.{{ server_name }};

        location ~ /.well-known {
                allow all;
        }
        location ~ /\. {
                deny all;
        }

		location / {
			include proxy_params;
			proxy_pass http://127.0.0.1:7020;
		}

        # deny access to .htaccess files, if Apache's document root
        # concurs with nginx's one
        #
        location ~ /\.ht {
                deny all;
        }
}
